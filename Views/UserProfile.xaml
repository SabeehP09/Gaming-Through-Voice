<UserControl x:Class="GamingThroughVoiceRecognitionSystem.Views.UserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
        <StackPanel MaxWidth="1200">

            <!-- Gaming Header -->
            <Grid Margin="0,0,0,32">
                <StackPanel>
                    <TextBlock Text="MY PROFILE 👤" FontSize="38" FontWeight="Black" 
                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="⚡ Manage your gaming profile and voice training progress"
                               FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>

            <!-- Gaming Profile Card -->
            <Border Background="{DynamicResource GlassBackgroundBrush}" 
                    BorderBrush="{DynamicResource GlassBorderBrush}" 
                    BorderThickness="2" 
                    CornerRadius="20" 
                    Padding="24" 
                    Margin="0,0,0,32">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Gaming Avatar -->
                    <Grid Grid.Column="0" Margin="0,0,32,0">
                        <Border Width="120" Height="120" CornerRadius="60" 
                                BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="4">
                            <Border.Background>
                                <Binding Source="{StaticResource PurpleCyanGradient}"/>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="30" ShadowDepth="0" Opacity="0.8"/>
                            </Border.Effect>
                            <TextBlock x:Name="AvatarInitials" Text="AJ" FontSize="48" 
                                       FontWeight="Black" Foreground="White" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- User Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="ProfileUserName" Text="Full Name" 
                                   FontSize="32" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="ProfileEmail" Text="email@domain.com" 
                                   FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,12" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Edit Button -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource GlassBackgroundBrush}"
                            BorderBrush="{DynamicResource GlassBorderBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            VerticalAlignment="Top">
                        <Border.Effect>
                            <DropShadowEffect Color="{DynamicResource SecondaryColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <Button Content="✏️ EDIT" 
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                FontWeight="Bold"
                                Padding="16,8"
                                Cursor="Hand"
                                Click="EditButton_Click"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Gaming Stats Grid -->
            <UniformGrid Columns="3" Rows="1" Margin="0,0,0,32">
                <Border Background="{DynamicResource GlassBackgroundBrush}" 
                        BorderBrush="{DynamicResource GlassBorderBrush}" 
                        BorderThickness="2" 
                        CornerRadius="20" 
                        Padding="20" 
                        Margin="0,0,12,0">
                    <Border.Effect>
                        <DropShadowEffect Color="{DynamicResource PrimaryColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="GamesPlayedText" Text="0" FontSize="36" FontWeight="Black" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="GAMES PLAYED" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,4"/>
                        </StackPanel>
                        <TextBlock Text="🎮" FontSize="48" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.15"/>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource GlassBackgroundBrush}" 
                        BorderBrush="{DynamicResource GlassBorderBrush}" 
                        BorderThickness="2" 
                        CornerRadius="20" 
                        Padding="20" 
                        Margin="6,0,6,0">
                    <Border.Effect>
                        <DropShadowEffect Color="{DynamicResource SecondaryColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="VoiceCommandsText" Text="0" FontSize="36" FontWeight="Black" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="VOICE COMMANDS" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,4"/>
                        </StackPanel>
                        <TextBlock Text="🎤" FontSize="48" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.15"/>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource GlassBackgroundBrush}" 
                        BorderBrush="{DynamicResource GlassBorderBrush}" 
                        BorderThickness="2" 
                        CornerRadius="20" 
                        Padding="20" 
                        Margin="12,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="{DynamicResource AccentColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="TotalPlaytimeText" Text="0h" FontSize="36" FontWeight="Black" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="TOTAL PLAYTIME" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,4"/>
                        </StackPanel>
                        <TextBlock Text="⏱️" FontSize="48" HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.15"/>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- Gaming Back Button -->
            <Border Background="{DynamicResource GlassBackgroundBrush}"
                    BorderBrush="{DynamicResource GlassBorderBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    HorizontalAlignment="Left"
                    Margin="0,32,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>
                <Button Content="⬅ BACK TO DASHBOARD" 
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        FontWeight="Bold"
                        Padding="20,12"
                        Cursor="Hand"
                        Click="BackButton_Click"/>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
