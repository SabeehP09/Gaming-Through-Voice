<Window x:Class="GamingThroughVoiceRecognitionSystem.Views.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Game"
        MinHeight="600" MinWidth="750"
        MaxHeight="900" MaxWidth="1200"
        Height="700" Width="900"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource GlassBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource GlassBackgroundBrush}" 
            BorderBrush="{DynamicResource GlassBorderBrush}" 
            BorderThickness="2" 
            CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource SidebarBackgroundBrush}" 
                    BorderBrush="{DynamicResource GlassBorderBrush}" 
                    BorderThickness="0,0,0,1" 
                    CornerRadius="20,20,0,0" 
                    Padding="24,0">
                <Grid>
                    <TextBlock Text="ðŸŽ® Add New Game" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               VerticalAlignment="Center"/>
                    <Button Content="âœ•" 
                            Width="36" 
                            Height="36" 
                            HorizontalAlignment="Right" 
                            Background="Transparent" 
                            BorderBrush="{DynamicResource GlassBorderBrush}" 
                            BorderThickness="1" 
                            Foreground="{DynamicResource TextPrimaryBrush}" 
                            FontSize="16" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Padding="32" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Game Name -->
                    <TextBlock Text="Game Name" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="GameNameTextBox" 
                             Style="{StaticResource ModernTextBox}" 
                             Margin="0,0,0,20" FontSize="10"/>

                    <!-- Game Path -->
                    <TextBlock Text="Game Executable Path" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="GamePathTextBox" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Grid.Column="0" 
                                 Margin="0,0,8,0" FontSize="10"/>
                        <Button Content="Browse" 
                                Grid.Column="1" 
                                Style="{StaticResource ActionButton}" 
                                Padding="16,8" 
                                Click="BrowseGamePath_Click"/>
                    </Grid>

                    <!-- Game Icon -->
                    <TextBlock Text="Game Icon (Optional)" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="IconPathTextBox" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Grid.Column="0" 
                                 Margin="0,0,8,0" FontSize="10"/>
                        <Button Content="Browse" 
                                Grid.Column="1" 
                                Style="{StaticResource ActionButton}" 
                                Padding="16,8" 
                                Click="BrowseIconPath_Click"/>
                    </Grid>

                    <!-- Icon Preview -->
                    <Border x:Name="IconPreviewBorder" 
                            Width="100" 
                            Height="100" 
                            Background="{DynamicResource SidebarBackgroundBrush}" 
                            BorderBrush="{DynamicResource GlassBorderBrush}" 
                            BorderThickness="2" 
                            CornerRadius="12" 
                            Margin="0,0,0,20" 
                            HorizontalAlignment="Left"
                            Visibility="Collapsed">
                        <Image x:Name="IconPreviewImage" Stretch="Uniform"/>
                    </Border>

                    <!-- Controls Section -->
                    <TextBlock Text="Game Controls" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               Margin="0,12,0,16"/>
                    
                    <ItemsControl x:Name="ControlsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SidebarBackgroundBrush}" 
                                        BorderBrush="{DynamicResource GlassBorderBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="12" 
                                        Padding="16" 
                                        Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Action" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding ActionName, Mode=TwoWay}" Style="{StaticResource ModernTextBox}" Height="36"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                            <TextBlock Text="Voice Command" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding VoiceCommand, Mode=TwoWay}" Style="{StaticResource ModernTextBox}" Height="36"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" Margin="0,0,8,0">
                                            <TextBlock Text="Key Binding" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding KeyBinding, Mode=TwoWay}" Style="{StaticResource ModernTextBox}" Height="36"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="3" 
                                                Content="ðŸ—‘ï¸" 
                                                Width="36" 
                                                Height="36" 
                                                Background="Transparent" 
                                                BorderBrush="#EF4444" 
                                                BorderThickness="2" 
                                                Foreground="#EF4444" 
                                                FontSize="14" 
                                                Cursor="Hand" 
                                                VerticalAlignment="Bottom"
                                                Click="RemoveControl_Click"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="+ Add Control" 
                            Style="{StaticResource ActionButton}" 
                            HorizontalAlignment="Left" 
                            Margin="0,8,0,0" 
                            Click="AddControl_Click"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SidebarBackgroundBrush}" 
                    BorderBrush="{DynamicResource GlassBorderBrush}" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,20,20" 
                    Padding="32,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                            Width="120" 
                            Height="40" 
                            Background="Transparent" 
                            BorderBrush="{DynamicResource GlassBorderBrush}" 
                            BorderThickness="2" 
                            Foreground="{DynamicResource TextPrimaryBrush}" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Margin="0,0,12,0" 
                            Click="CloseButton_Click"/>
                    <Button Content="Save Game" 
                            Width="120" 
                            Height="40" 
                            Style="{StaticResource ActionButton}" 
                            Click="SaveGame_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
