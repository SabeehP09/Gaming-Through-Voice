<Window x:Class="GamingThroughVoiceRecognitionSystem.Views.VoiceRecordingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voice Recognition"
        MinHeight="450" MinWidth="600"
        MaxHeight="700" MaxWidth="900"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="20" Background="{DynamicResource BackgroundDarkBrush}" 
            BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <!-- Background Gradient -->
            <Rectangle Fill="{DynamicResource BackgroundGradientBrush}" RadiusX="20" RadiusY="20"/>

            <!-- Main Content -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Microphone Icon with Animation -->
                <Grid Width="200" Height="200" Margin="0,0,0,30">
                    <!-- Audio Wave Visualization -->
                    <Ellipse x:Name="AudioWave" Width="180" Height="180" 
                             Fill="{DynamicResource GlassBackgroundBrush}" 
                             Opacity="0.3">
                        <Ellipse.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1" CenterX="90" CenterY="90"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>

                    <!-- Recording Indicator -->
                    <Ellipse x:Name="RecordingIndicator" Width="150" Height="150">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0"/>
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="30" ShadowDepth="0" Opacity="0.8"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <!-- Microphone Icon -->
                    <TextBlock Text="ðŸŽ¤" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <!-- Instructions -->
                <Border Background="{DynamicResource GlassBackgroundBrush}" 
                        BorderBrush="{DynamicResource GlassBorderBrush}" 
                        BorderThickness="2" CornerRadius="15" Padding="30,15" Margin="0,0,0,30">
                    <TextBlock x:Name="InstructionText" Text="Click to start recording" 
                               FontSize="18" Foreground="{DynamicResource TextPrimaryBrush}" 
                               FontWeight="Bold" HorizontalAlignment="Center"/>
                </Border>

                <!-- Record Button -->
                <Border Background="{DynamicResource GlassBackgroundBrush}" 
                        BorderBrush="{DynamicResource GlassBorderBrush}" 
                        BorderThickness="2" CornerRadius="25">
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                    <Button x:Name="RecordButton" Content="ðŸŽ¤ START RECORDING" 
                            Width="250" Height="50" 
                            Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            FontSize="16" FontWeight="Bold" Cursor="Hand"
                            Click="RecordButton_Click"/>
                </Border>

                <!-- Tips -->
                <TextBlock Text="ðŸ’¡ Speak clearly and naturally" 
                           FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Margin="0,10,10,0" Click="CloseButton_Click"
                    Background="{DynamicResource GlassBackgroundBrush}"
                    BorderBrush="#FF4444" BorderThickness="2" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="20">
                            <TextBlock Text="âœ•" FontSize="20" FontWeight="Bold" 
                                       Foreground="#FF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Success Overlay -->
            <Grid x:Name="SuccessOverlay" Background="#CC000000" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="âœ“" FontSize="100" Foreground="#00FF00" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Voice Recorded Successfully!" FontSize="28" Foreground="White" 
                               FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
