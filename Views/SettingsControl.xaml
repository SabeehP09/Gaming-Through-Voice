<UserControl x:Class="GamingThroughVoiceRecognitionSystem.Views.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1320">

    <UserControl.Resources>
        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="Background" Value="#06B6D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0891B2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer Padding="32" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="1000">
            <!-- Header -->
            <TextBlock Text="Settings âš™ï¸" FontSize="36" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
            <TextBlock Text="Customize your gaming experience" FontSize="18" Foreground="#94A3B8" Margin="0,0,0,32"/>

            <!-- Appearance Settings -->
            <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="2" CornerRadius="20" Padding="24" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="APPEARANCE ðŸŽ¨" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Dark Mode" FontSize="18" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBlock Text="Toggle between light and dark theme" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <!-- Custom Toggle Switch -->
                        <Border x:Name="ThemeToggleBorder" Grid.Column="1" Width="80" Height="40" CornerRadius="20" 
                                Background="{DynamicResource GlassBorderBrush}" 
                                BorderBrush="{DynamicResource GlassBorderBrush}" 
                                BorderThickness="2"
                                Cursor="Hand"
                                MouseLeftButtonDown="ThemeToggle_Click">
                            <Grid>
                                <!-- Toggle Circle -->
                                <Ellipse x:Name="ToggleCircle" Width="30" Height="30" 
                                         Fill="{DynamicResource TextPrimaryBrush}"
                                         HorizontalAlignment="Left" 
                                         Margin="5,0,0,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                
                                <!-- Icons -->
                                <TextBlock x:Name="LightIcon" Text="â˜€ï¸" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                <TextBlock x:Name="DarkIcon" Text="ðŸŒ™" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.3"/>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Voice Recognition Settings -->
            <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1" CornerRadius="20" Padding="24" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Voice Recognition" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Voice Sensitivity" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <Slider x:Name="VoiceSensitivitySlider" Minimum="0" Maximum="100" Value="75" TickFrequency="10" IsSnapToTickEnabled="True"/>
                        </StackPanel>
                    </Grid>

                    <CheckBox x:Name="EnableVoiceCommandsCheckBox" Content="Enable Voice Commands" IsChecked="True" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14" Margin="0,0,0,12"/>
                    <CheckBox x:Name="NoiseCancellationCheckBox" Content="Background Noise Cancellation" IsChecked="True" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14" Margin="0,0,0,12"/>
                    <CheckBox x:Name="VoiceFeedbackCheckBox" Content="Voice Feedback" IsChecked="False" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Audio Settings -->
            <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1" CornerRadius="20" Padding="24" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Audio Settings" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Master Volume" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    <Slider Minimum="0" Maximum="100" Value="80" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Voice Volume" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    <Slider Minimum="0" Maximum="100" Value="70" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Effects Volume" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    <Slider Minimum="0" Maximum="100" Value="60" TickFrequency="10" IsSnapToTickEnabled="True"/>
                </StackPanel>
            </Border>

            <!-- Game Settings -->
            <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1" CornerRadius="20" Padding="24" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Game Settings" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <CheckBox Content="Auto-save Progress" IsChecked="True" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14" Margin="0,0,0,12"/>
                    <CheckBox Content="Show Tutorials" IsChecked="True" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14" Margin="0,0,0,12"/>
                    <CheckBox Content="Enable Achievements" IsChecked="True" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14" Margin="0,0,0,12"/>
                    <CheckBox Content="Fullscreen Mode" IsChecked="False" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Privacy Settings -->
            <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1" CornerRadius="20" Padding="24" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Privacy &amp; Data" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20"/>
                    
                    <CheckBox Content="Save Voice Data for Training" IsChecked="True" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14" Margin="0,0,0,12"/>
                    <CheckBox Content="Share Anonymous Usage Statistics" IsChecked="False" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14" Margin="0,0,0,12"/>
                    <CheckBox Content="Allow Game Recordings" IsChecked="True" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Save Button -->
            <Button Content="Save Settings" Style="{StaticResource SettingsButton}" Height="50" Click="SaveSettings_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
