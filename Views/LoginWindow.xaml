<Window x:Class="GamingThroughVoiceRecognitionSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" 
        Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        MaxHeight="900" MaxWidth="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Gradient Animation for Background -->
        <Storyboard x:Key="BackgroundAnimationStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <ColorAnimation Storyboard.TargetName="GradientStop1"
                            Storyboard.TargetProperty="Color"
                            From="#6366F1" To="#8B5CF6"
                            Duration="0:0:5"/>
            <ColorAnimation Storyboard.TargetName="GradientStop2"
                            Storyboard.TargetProperty="Color"
                            From="#8B5CF6" To="#EC4899"
                            Duration="0:0:5"/>
            <ColorAnimation Storyboard.TargetName="GradientStop3"
                            Storyboard.TargetProperty="Color"
                            From="#EC4899" To="#6366F1"
                            Duration="0:0:5"/>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="16"
            BorderThickness="1"
            BorderBrush="#33FFFFFF"
            Background="{StaticResource BackgroundDarkBrush}">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <!-- Dynamic Gradient Background -->
            <Rectangle RadiusX="16" RadiusY="16" CacheMode="BitmapCache" Margin="0,0,0,-64" Grid.RowSpan="2">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop x:Name="GradientStop1" Color="#6366F1" Offset="0"/>
                        <GradientStop x:Name="GradientStop2" Color="#8B5CF6" Offset="0.5"/>
                        <GradientStop x:Name="GradientStop3" Color="#EC4899" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- Top Bar for Drag + Window Controls -->
            <Border Background="Transparent" MouseLeftButtonDown="WindowChrome_MouseLeftButtonDown" Grid.ZIndex="2" Margin="0,2,0,546">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE BACK BUTTON -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                        <Button x:Name="BackButton"
                    Width="30" Height="30"
                    Click="BackButton_Click"
                    Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="15" Background="Gray">
                                        <TextBlock Text="←" FontSize="16" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- RIGHT SIDE WINDOW CONTROLS -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                        <Button Width="30" Height="30" Margin="0,5,5,5" Click="MinimizeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="15" Background="Gray">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="_" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>

                        <Button Width="30" Height="30" Margin="0,5,5,5" Click="MaximizeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="15" Background="Gray">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="O" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>

                        <Button Width="30" Height="30" Margin="0,5,0,5" Click="CloseButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="15" Background="Red">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="X" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Login Content -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Grid.ZIndex="3" Margin="0,57,0,0" Grid.RowSpan="2" Height="545" Width="310">
                <!-- Logo -->

                <!-- Title -->
                <!-- Logo -->
                <Border Width="110" Height="104" CornerRadius="60"
                        Background="{StaticResource SurfaceGlassBrush}"
                        BorderBrush="{StaticResource PrimaryGradientBrush}"
                        BorderThickness="3">
                    <Image Stretch="Uniform" Margin="15" Source="/Views/icon.png"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="Login" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Biometric Login Options -->
                <TextBlock Text="Choose your login method" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Face & Voice Login Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <!-- Face Login Button -->
                    <Border CornerRadius="15" Background="{StaticResource GlassBackgroundBrush}" 
                            BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="2" 
                            Margin="0,0,10,0" Width="145" Height="120" Cursor="Hand"
                            MouseLeftButtonDown="FaceLoginButton_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="📷" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Face Login" FontSize="14" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Voice Login Button -->
                    <Border CornerRadius="15" Background="{StaticResource GlassBackgroundBrush}" 
                            BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="2" 
                            Margin="10,0,0,0" Width="145" Height="120" Cursor="Hand"
                            MouseLeftButtonDown="VoiceLoginButton_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource SecondaryGlowColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="🎤" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Voice Login" FontSize="14" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Manual Login Section -->
                <TextBlock Text="Or login with email &amp; password" Foreground="{StaticResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <StackPanel Orientation="Vertical" Width="300">
                    <!-- Email TextBox -->
                    <Grid Margin="0,0,0,10">
                        <TextBox x:Name="EmailTextBox" Height="35" VerticalAlignment="Center" Text="Email" Foreground="Gray"
                                 GotFocus="EmailTextBox_GotFocus" LostFocus="EmailTextBox_LostFocus" Background="{DynamicResource GlassBorderBrush}"/>
                    </Grid>

                    <!-- PasswordBox -->
                    <Grid Margin="0,0,0,10" Background="{DynamicResource GlassBorderBrush}">
                        <PasswordBox x:Name="PasswordBox" Height="35" Background="{Binding Mode=OneWay, Source={StaticResource GlassBackgroundBrush}}"/>
                        <TextBlock Text="Password" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"
                                   IsHitTestVisible="False" x:Name="PasswordPlaceholder"/>
                    </Grid>

                    <!-- Login Button -->
                    <Border CornerRadius="12" Background="{StaticResource GlassBackgroundBrush}" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="1">
                        <Button x:Name="ManualLoginButton" Content="Login" Height="45" Width="300" Background="Transparent" BorderThickness="0" Click="ManualLoginButton_Click"/>
                    </Border>

                    <!-- Forgot Password Link -->
                    <TextBlock Text="Forgot Password?" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center" 
                               Cursor="Hand" 
                               MouseLeftButtonUp="ForgotPasswordTextBlock_Click" 
                               Margin="0,10,0,0"
                               FontSize="12"/>
                </StackPanel>

                <!-- Footer -->
                <TextBlock Text="Don't have an account? Sign up" Foreground="{StaticResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="SignUpTextBlock_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
