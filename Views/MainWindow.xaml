<Window x:Class="GamingThroughVoiceRecognitionSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamingThroughVoiceRecognitionSystem.Views"
        mc:Ignorable="d"
        Title="Gaming Through Voice"
        Height="600" Width="900"
        MinWidth="700" MinHeight="500"
        MaxWidth="1400" MaxHeight="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid>
        <!-- Gradient Background -->
        <Rectangle RadiusX="16" RadiusY="16">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="GradientStop1" Color="#6366F1" Offset="0"/>
                    <GradientStop x:Name="GradientStop2" Color="#8B5CF6" Offset="0.5"/>
                    <GradientStop x:Name="GradientStop3" Color="#EC4899" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Top Window Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <!-- Minimize -->
            <Button x:Name="MinimizeButton" Width="30" Height="30" Click="MinimizeButton_Click" Cursor="Hand" Background="#33FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1" Margin="0,0,5,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="1">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="–" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <!-- Maximize/Restore -->
            <Button x:Name="MaximizeButton" Width="30" Height="30" Click="MaximizeButton_Click" Cursor="Hand" Background="#33FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1" Margin="0,0,5,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="1">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="☐" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <!-- Close -->
            <Button x:Name="CloseButton" Width="30" Height="30" Click="CloseButton_Click" Cursor="Hand" Background="#33FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="1">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="✕" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>

        <!-- Main Glass Panel -->
        <Border CornerRadius="20" Padding="20" Background="#33FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="650" MaxHeight="450" MinWidth="350" MinHeight="250">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Hero Section -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,20">
                    <Border Width="120" Height="120" CornerRadius="60" Background="#33FFFFFF" BorderBrush="#8B5CF6" BorderThickness="3" HorizontalAlignment="Center">
                        <Image Stretch="Uniform" Margin="15" Source="/Views/icon.png"/>
                    </Border>
                    <TextBlock Text="Gaming Through Voice" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    <TextBlock Text="Experience gaming like never before" FontSize="16" Foreground="#DDFFFFFF" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Buttons Section -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="LoginButton" Width="180" Height="60" Cursor="Hand" Click="LoginButton_Click" Background="#33FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1" Margin="0,0,16,0">
                        <TextBlock Text="LOGIN" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    <Button x:Name="SignUpButton" Width="180" Height="60" Cursor="Hand" Click="SignUpButton_Click" Background="#33FFFFFF" BorderBrush="#55FFFFFF" BorderThickness="1">
                        <TextBlock Text="SIGN UP" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>

                <!-- Footer -->
                <TextBlock Grid.Row="2" Text="Control your favorite games with your voice" FontSize="14" Foreground="#DDFFFFFF" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
