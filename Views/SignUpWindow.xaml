<Window x:Class="GamingThroughVoiceRecognitionSystem.Views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Signup" 
        Height="749" Width="930"
        MinHeight="600" MinWidth="750"
        MaxHeight="1000" MaxWidth="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Gradient Animation for Background -->
        <Storyboard x:Key="BackgroundAnimationStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <ColorAnimation Storyboard.TargetName="GradientStop1"
                            Storyboard.TargetProperty="Color"
                            From="#6366F1" To="#8B5CF6"
                            Duration="0:0:5"/>
            <ColorAnimation Storyboard.TargetName="GradientStop2"
                            Storyboard.TargetProperty="Color"
                            From="#8B5CF6" To="#EC4899"
                            Duration="0:0:5"/>
            <ColorAnimation Storyboard.TargetName="GradientStop3"
                            Storyboard.TargetProperty="Color"
                            From="#EC4899" To="#6366F1"
                            Duration="0:0:5"/>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="16"
            BorderThickness="1"
            BorderBrush="#33FFFFFF"
            Background="{StaticResource BackgroundDarkBrush}">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <!-- Animated Gradient Background -->
            <Rectangle RadiusX="16" RadiusY="16" CacheMode="BitmapCache">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop x:Name="GradientStop1" Color="#6366F1" Offset="0"/>
                        <GradientStop x:Name="GradientStop2" Color="#8B5CF6" Offset="0.5"/>
                        <GradientStop x:Name="GradientStop3" Color="#EC4899" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- Top Bar for Drag + Window Controls -->
            <Grid Height="40" Background="Transparent" Grid.ZIndex="2" Margin="0,10,0,697" MouseLeftButtonDown="WindowChrome_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- LEFT SIDE: Back Button -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Button Width="30" Height="30" Click="BackButton_Click" ToolTip="Go Back">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="15" Background="#444444">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <!-- Back Arrow Icon -->
                        <TextBlock Text="⟵" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>


                <!-- RIGHT SIDE: Minimize / Maximize / Close -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                    <Button Width="30" Height="30" Margin="0,5,5,5" Click="MinimizeButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="15" Background="Gray">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="_" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <Button Width="30" Height="30" Margin="0,5,5,5" Click="MaximizeButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="15" Background="Gray">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="O" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <Button Width="30" Height="30" Margin="0,5,0,5" Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="15" Background="Red">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="X" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Signup Content -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ZIndex="3" Margin="0,60,0,0">
                <!-- Logo -->
                <Border Width="120" Height="120" CornerRadius="60"
                        Background="{StaticResource SurfaceGlassBrush}"
                        BorderBrush="{StaticResource PrimaryGradientBrush}"
                        BorderThickness="3"
                        HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image Stretch="Uniform" Margin="15" Source="/Views/icon.png"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="Sign Up" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Biometric Registration Info -->
                <TextBlock Text="Register your biometric data (optional)" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Face & Voice Registration Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <!-- Face Registration Button -->
                    <Border CornerRadius="15" Background="{StaticResource GlassBackgroundBrush}" 
                            BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="2" 
                            Margin="0,0,10,0" Width="145" Height="110" Cursor="Hand"
                            MouseLeftButtonDown="FaceRegisterButton_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource PrimaryGlowColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="FaceStatusIcon" Text="📷" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Capture Face" FontSize="13" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="FaceStatusText" Text="Not captured" FontSize="10" 
                                       Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Voice Registration Button -->
                    <Border CornerRadius="15" Background="{StaticResource GlassBackgroundBrush}" 
                            BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="2" 
                            Margin="10,0,0,0" Width="145" Height="110" Cursor="Hand"
                            MouseLeftButtonDown="VoiceRegisterButton_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource SecondaryGlowColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="VoiceStatusIcon" Text="🎤" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Record Voice" FontSize="13" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="VoiceStatusText" Text="Not recorded" FontSize="10" 
                                       Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Manual Input Fields -->
                <StackPanel Orientation="Vertical" Width="300">
                    <TextBox x:Name="NameTextBox" Height="35" Margin="0,0,0,10" Text="Full Name" Foreground="Gray"
                             GotFocus="NameTextBox_GotFocus" LostFocus="NameTextBox_LostFocus" Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}"/>
                    <TextBox x:Name="AgeTextBox" Height="35" Margin="0,0,0,10" Text="Age" Foreground="Gray"
                             GotFocus="AgeTextBox_GotFocus" LostFocus="AgeTextBox_LostFocus" Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}"/>
                    <TextBox x:Name="EmailTextBox" Height="35" Margin="0,0,0,10" Text="Email" Foreground="Gray"
                             GotFocus="EmailTextBox_GotFocus" LostFocus="EmailTextBox_LostFocus" Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}"/>

                    <!-- Password overlay: PasswordBox + TextBlock placeholder placed in same Grid -->
                    <Grid Margin="0,0,0,10" Height="35">
                        <PasswordBox x:Name="PasswordBox" VerticalAlignment="Stretch" PasswordChanged="PasswordBox_PasswordChanged" Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}"/>
                        <TextBlock x:Name="PasswordPlaceholder" Text="Password"
                                   Foreground="Gray" VerticalAlignment="Center" Margin="8,0,0,0"
                                   IsHitTestVisible="False"/>
                    </Grid>
                </StackPanel>

                <!-- Signup Button -->
                <Border CornerRadius="12" Background="{StaticResource GlassBackgroundBrush}" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="1" Margin="0,20,0,0">
                    <Button x:Name="SignupButton" Content="Sign Up" Height="45" Width="300" Background="Transparent" BorderThickness="0" Click="SignupButton_Click"/>
                </Border>

                <!-- Footer -->
                <TextBlock Text="Already have an account? Login" Foreground="{StaticResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="LoginTextBlock_Click" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
