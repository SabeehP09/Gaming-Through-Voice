<Window x:Class="GamingThroughVoiceRecognitionSystem.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password"
        MinHeight="400" MinWidth="450"
        MaxHeight="700" MaxWidth="600"
        Height="500" Width="500"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="{DynamicResource GlassBackgroundBrush}" 
            BorderBrush="{DynamicResource GlassBorderBrush}" 
            BorderThickness="2" 
            CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource SidebarBackgroundBrush}" 
                    BorderBrush="{DynamicResource GlassBorderBrush}" 
                    BorderThickness="0,0,0,1" 
                    CornerRadius="20,20,0,0" 
                    Padding="24,0">
                <Grid>
                    <TextBlock Text="ðŸ”‘ Reset Password" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               VerticalAlignment="Center"/>
                    <Button Content="âœ•" 
                            Width="36" 
                            Height="36" 
                            HorizontalAlignment="Right" 
                            Background="Transparent" 
                            BorderBrush="{DynamicResource GlassBorderBrush}" 
                            BorderThickness="1" 
                            Foreground="{DynamicResource TextPrimaryBrush}" 
                            FontSize="16" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="32" VerticalAlignment="Center">
                <TextBlock Text="Enter your email address to reset your password" 
                           FontSize="14" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email Address" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           Margin="0,0,0,8"/>
                <TextBox x:Name="EmailTextBox" 
                         Height="40" 
                         Background="{DynamicResource SidebarBackgroundBrush}"
                         BorderBrush="{DynamicResource GlassBorderBrush}"
                         BorderThickness="2"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         Padding="12"
                         FontSize="14"
                         Margin="0,0,0,20"/>

                <!-- New Password -->
                <TextBlock Text="New Password" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="NewPasswordBox" 
                             Height="40" 
                             Background="{DynamicResource SidebarBackgroundBrush}"
                             BorderBrush="{DynamicResource GlassBorderBrush}"
                             BorderThickness="2"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Padding="12"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Height="40" 
                             Background="{DynamicResource SidebarBackgroundBrush}"
                             BorderBrush="{DynamicResource GlassBorderBrush}"
                             BorderThickness="2"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Padding="12"
                             FontSize="14"/>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SidebarBackgroundBrush}" 
                    BorderBrush="{DynamicResource GlassBorderBrush}" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,20,20" 
                    Padding="32,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                            Width="120" 
                            Height="40" 
                            Background="Transparent" 
                            BorderBrush="{DynamicResource GlassBorderBrush}" 
                            BorderThickness="2" 
                            Foreground="{DynamicResource TextPrimaryBrush}" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Margin="0,0,12,0" 
                            Click="CloseButton_Click"/>
                    <Button Content="Reset Password" 
                            Width="140" 
                            Height="40" 
                            Background="{StaticResource PrimaryGradientBrush}"
                            BorderThickness="0" 
                            Foreground="White" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Click="ResetButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
