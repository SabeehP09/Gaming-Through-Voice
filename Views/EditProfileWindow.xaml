<Window x:Class="GamingThroughVoiceRecognitionSystem.Views.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Profile"
        MinHeight="500" MinWidth="450"
        MaxHeight="800" MaxWidth="650"
        Height="600" Width="500"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="{DynamicResource GlassBackgroundBrush}" 
            BorderBrush="{DynamicResource GlassBorderBrush}" 
            BorderThickness="2" 
            CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource SidebarBackgroundBrush}" 
                    BorderBrush="{DynamicResource GlassBorderBrush}" 
                    BorderThickness="0,0,0,1" 
                    CornerRadius="20,20,0,0" 
                    Padding="24,0">
                <Grid>
                    <TextBlock Text="âœï¸ Edit Profile" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               VerticalAlignment="Center"/>
                    <Button Content="âœ•" 
                            Width="36" 
                            Height="36" 
                            HorizontalAlignment="Right" 
                            Background="Transparent" 
                            BorderBrush="{DynamicResource GlassBorderBrush}" 
                            BorderThickness="1" 
                            Foreground="{DynamicResource TextPrimaryBrush}" 
                            FontSize="16" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Padding="32" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock x:Name="LoginMethodText" 
                               Text="Login Method: Manual" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               Margin="0,0,0,20"/>

                    <!-- Manual Login Section -->
                    <StackPanel x:Name="ManualLoginSection" Visibility="Visible">
                        <TextBlock Text="Change Password" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   Margin="0,0,0,16"/>

                        <!-- Current Password -->
                        <TextBlock Text="Current Password" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   Margin="0,0,0,8"/>
                        <PasswordBox x:Name="CurrentPasswordBox" 
                                     Height="40" 
                                     Background="{DynamicResource SidebarBackgroundBrush}"
                                     BorderBrush="{DynamicResource GlassBorderBrush}"
                                     BorderThickness="2"
                                     Padding="12"
                                     FontSize="14"
                                     Margin="0,0,0,16"/>

                        <!-- New Password -->
                        <TextBlock Text="New Password" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   Margin="0,0,0,8"/>
                        <PasswordBox x:Name="NewPasswordBox" 
                                     Height="40" 
                                     Background="{DynamicResource SidebarBackgroundBrush}"
                                     BorderBrush="{DynamicResource GlassBorderBrush}"
                                     BorderThickness="2"
                                     Padding="12"
                                     FontSize="14"
                                     Margin="0,0,0,16"/>

                        <!-- Confirm Password -->
                        <TextBlock Text="Confirm New Password" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   Margin="0,0,0,8"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" 
                                     Height="40" 
                                     Background="{DynamicResource SidebarBackgroundBrush}"
                                     BorderBrush="{DynamicResource GlassBorderBrush}"
                                     BorderThickness="2"
                                     Padding="12"
                                     FontSize="14"/>
                    </StackPanel>

                    <!-- Face Recognition Section -->
                    <StackPanel x:Name="FaceRecognitionSection" Visibility="Collapsed">
                        <TextBlock Text="Re-enroll Face Recognition" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Click the button below to capture a new face image for authentication." 
                                   FontSize="14" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16"/>

                        <Button Content="ðŸ“· Capture New Face" 
                                Height="50" 
                                Background="{StaticResource PrimaryGradientBrush}"
                                BorderThickness="0" 
                                Foreground="White" 
                                FontSize="14" 
                                FontWeight="Bold" 
                                Cursor="Hand" 
                                Click="CaptureFaceButton_Click"/>
                    </StackPanel>

                    <!-- Voice Recognition Section -->
                    <StackPanel x:Name="VoiceRecognitionSection" Visibility="Collapsed">
                        <TextBlock Text="Re-record Voice Passphrase" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Click the button below to record a new voice passphrase for authentication." 
                                   FontSize="14" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16"/>

                        <Button Content="ðŸŽ¤ Record New Voice" 
                                Height="50" 
                                Background="{StaticResource PrimaryGradientBrush}"
                                BorderThickness="0" 
                                Foreground="White" 
                                FontSize="14" 
                                FontWeight="Bold" 
                                Cursor="Hand" 
                                Click="RecordVoiceButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SidebarBackgroundBrush}" 
                    BorderBrush="{DynamicResource GlassBorderBrush}" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,20,20" 
                    Padding="32,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                            Width="120" 
                            Height="40" 
                            Background="Transparent" 
                            BorderBrush="{DynamicResource GlassBorderBrush}" 
                            BorderThickness="2" 
                            Foreground="{DynamicResource TextPrimaryBrush}" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Margin="0,0,12,0" 
                            Click="CloseButton_Click"/>
                    <Button x:Name="SaveButton"
                            Content="Save Changes" 
                            Width="140" 
                            Height="40" 
                            Background="{StaticResource PrimaryGradientBrush}"
                            BorderThickness="0" 
                            Foreground="White" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand" 
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
