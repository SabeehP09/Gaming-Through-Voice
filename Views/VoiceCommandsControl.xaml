<UserControl x:Class="GamingThroughVoiceRecognitionSystem.Views.VoiceCommandsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1320">

    <ScrollViewer Padding="32" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="1200">
            <!-- Header -->
            <TextBlock Text="Voice Commands ðŸŽ¤" FontSize="36" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
            <TextBlock Text="Train and manage your voice commands for gaming" FontSize="18" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,32"/>

            <!-- Voice Training Section -->
            <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1" CornerRadius="20" Padding="24" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Voice Training Progress" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,16">
                        <ProgressBar Height="30" Value="65" Maximum="100" Background="{DynamicResource GlassBorderBrush}" Foreground="#06B6D4" BorderThickness="0"/>
                        <TextBlock Text="65% Complete" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>

                    <TextBlock Text="Continue training to improve voice recognition accuracy" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,16"/>
                    
                    <Button Content="Start Training Session" Height="45" Background="#06B6D4" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Available Commands -->
            <TextBlock Text="Available Commands" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>
            
            <UniformGrid Columns="2" Margin="0,0,0,24">
                <!-- Command Card 1 -->
                <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1" CornerRadius="20" Padding="20" Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ® Movement Commands" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,12"/>
