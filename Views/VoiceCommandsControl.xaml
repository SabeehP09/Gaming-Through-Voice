                        <TextBlock Text="â€¢ Turn Left" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ Turn Right" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ Jump" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Command Card 2 -->
                <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1" CornerRadius="20" Padding="20" Margin="12,0,0,12">
                    <StackPanel>
                        <TextBlock Text="âš”ï¸ Action Commands" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                        <TextBlock Text="â€¢ Attack" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ Defend" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ Use Item" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ Reload" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock Text="â€¢ Switch Weapon" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Command Card 3 -->
                <Border Background="{DynamicResource GlassBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1" CornerRadius="20" Padding="20" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ—ºï¸ Navigation Commands" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                        <TextBlock Text="â€¢ Open Map" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
